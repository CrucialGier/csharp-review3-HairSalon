<h2>Delete Confirmation</h2>
<hr/>
<h2>Are you sure you want to delete this Stylist and all of their appointments?</h2>
<h3>@Model.GetName()</h3>
<form action="/stylist/delete/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Yes</button>
</form>
<form action="/" method="get">
  <button type="submit">No</button>
</form>
